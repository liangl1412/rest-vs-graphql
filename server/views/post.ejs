    <script>
        var postObj = {};
        var postId = "<%= postId %>";
        $.ajax({
            method: "GET",
            url: "/api/post/" + postId,
            success: function(data) {
                postObj.title = data.title;
                postObj.body = data.body;
                var userId = data.uid;
                $.ajax({
                    method: "GET",
                    url: "/api/user/" + userId,
                    success: function(data) {
                        postObj.name = data.name;
                        postObj.email = data.email;
                    }
                });
            }
        });

        $.ajax({
            method: "GET",
            url: "/api/comments/" + postId,
            success: function(data) {
                var comments = []
                $.each( data, function( key, value ) {
                    let user = {};
                    $.ajax({
                        method: "GET",
                        url: "/api/user/" + value.uid,
                        success: function(data) {
                            user.name = data.name;
                            user.email = data.email;
                        }
                    });
                    comments[key] = {body: value.body};
                    comments[key] = {body: value.body, user:user};
                });
                postObj.comments = comments;
            }
        });
